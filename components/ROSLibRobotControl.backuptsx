        console.log('ğŸ“ í”½ì…€ ì¢Œí‘œ ìˆ˜ì‹ :', message);

        const webCoords = reverseTransform(message.x, message.y);

        const newPosition: RobotPosition = {
          x: webCoords.x,
          y: webCoords.y,
