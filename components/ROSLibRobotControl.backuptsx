    }

    const uniqueRoute = deduplicateRouteByLocation(routeData.route);

    if (currentStoreIndex >= uniqueRoute.length) {
      addNotification('ëª¨ë“  ë§¤ëŒ€ë¥¼ ì™„ë£Œí–ˆìŠµë‹ˆë‹¤!');
      return;
    }

    const targetStore = uniqueRoute[currentStoreIndex];
    const success = sendSingleGoal(
      targetStore.coordinates.x,
      targetStore.coordinates.y,
      targetStore.location,
    );

    if (success) {
      setIsNavigating(true);
      addNotification(
        `ğŸ“ ${currentStoreIndex + 1}/${uniqueRoute.length}: ${
          targetStore.location
        }ìœ¼ë¡œ ì´ë™ ì‹œì‘`,
      );
    }
  };

  // í˜„ì¬ ë§¤ëŒ€ ì™„ë£Œ ë° ë‹¤ìŒìœ¼ë¡œ
  const completeCurrentStore = (): void => {
    if (!routeData || !routeData.route) return;

    const uniqueRoute = deduplicateRouteByLocation(routeData.route);

    if (currentStoreIndex < uniqueRoute.length) {
      addNotification(`âœ… ${uniqueRoute[currentStoreIndex].location} ì™„ë£Œ`);
      setCurrentStoreIndex((prev) => prev + 1);
      setIsNavigating(false);
    }
  };

  const stopRobot = (): void => {
    const ROSLIB = getROSLIB();
    if (!rosRef.current || !ROSLIB) {
      addNotification('ROS ì—°ê²°ì´ í•„ìš”í•©ë‹ˆë‹¤');
      return;
    }

    try {
      const cmdVel = new ROSLIB.Topic({
        ros: rosRef.current,
        name: '/cmd_vel',
        messageType: 'geometry_msgs/Twist',
      });

      const stopTwist = new ROSLIB.Message({
        linear: { x: 0.0, y: 0.0, z: 0.0 },
        angular: { x: 0.0, y: 0.0, z: 0.0 },
      });

      cmdVel.publish(stopTwist);
      addNotification('ì •ì§€ ëª…ë ¹ ì „ì†¡');
      setIsNavigating(false);
    } catch (error) {
      console.error('ì •ì§€ ëª…ë ¹ ì˜¤ë¥˜:', error);
      const errorMessage =
        error instanceof Error ? error.message : 'Unknown error';
      addNotification(`ì •ì§€ ëª…ë ¹ ì‹¤íŒ¨: ${errorMessage}`);
    }
  };

  const forceReconnect = (): void => {
    setConnectionAttempts(0);
    setIsConnecting(false);
    setIsConnected(false);

    if (reconnectTimeoutRef.current) {
      clearTimeout(reconnectTimeoutRef.current);
    }

    initializeROSConnection();
  };

  // í˜„ì¬ ê²½ë¡œ ì •ë³´
  const uniqueRoute = routeData?.route
    ? deduplicateRouteByLocation(routeData.route)
    : [];

  return (
    <div className="bg-white rounded-lg border border-gray-200 overflow-hidden h-full">
      {/* í—¤ë” */}
      <div className="bg-gradient-to-r from-green-600 to-blue-600 text-white p-4">
        <div className="flex justify-between items-center">
          <h3 className="font-bold text-lg">ğŸ¤– Scout Mini ì œì–´</h3>
          <div className="flex items-center gap-4 text-sm">
            <div className="flex items-center gap-1">
              <div
                className={`w-3 h-3 rounded-full ${
                  isROSLIBReady ? 'bg-green-400' : 'bg-yellow-400'
                }`}
              />
              <span>ROSLIB: {isROSLIBReady ? 'ì¤€ë¹„ë¨' : 'ë¡œë”©ì¤‘'}</span>
            </div>
            <div className="flex items-center gap-1">
              <div
                className={`w-3 h-3 rounded-full ${
                  isConnected
                    ? 'bg-green-400'
                    : isConnecting
                    ? 'bg-yellow-400'
                    : 'bg-red-400'
                }`}
              />
              <span>
                ROS2:{' '}
                {isConnected ? 'ì—°ê²°ë¨' : isConnecting ? 'ì—°ê²°ì¤‘' : 'ëŠê¹€'}
              </span>
            </div>
            <div className="flex items-center gap-1">
              <div
                className={`w-3 h-3 rounded-full ${
                  transformParams.enabled ? 'bg-blue-400' : 'bg-gray-400'
                }`}
              />
              <span>ë³€í™˜: {transformParams.enabled ? 'ON' : 'OFF'}</span>
            </div>
            {robotPosition && (
              <div className="flex items-center gap-1">
                <div className="w-3 h-3 bg-blue-400 rounded-full animate-pulse" />
                <span>ìœ„ì¹˜: {robotPosition.type.toUpperCase()}</span>
              </div>
            )}
          </div>
        </div>
      </div>

      {/* ì•Œë¦¼ ì˜ì—­ */}
      {notifications.length > 0 && (
        <div
          className="bg-blue-50 border-b p-3 overflow-y-auto"
          style={{ maxHeight: '120px' }}
        >
          {notifications.map((notification, index) => (
            <div key={index} className="text-xs text-blue-800 mb-1 font-mono">
              ğŸ“¢ {notification}
            </div>
          ))}
        </div>
      )}

      <div className="p-4 space-y-4">
        {/* ì—°ê²° ìƒíƒœ í‘œì‹œ ìƒëµ - ê¸°ì¡´ê³¼ ë™ì¼ */}

        {/* ë§¤ëŒ€ë³„ ì´ë™ ì œì–´ */}
        {uniqueRoute.length > 0 && (
          <div className="bg-blue-50 border border-blue-200 rounded-lg p-4">
            <h4 className="font-semibold text-blue-800 mb-3">
              ğŸ—ºï¸ ë§¤ëŒ€ë³„ ì´ë™ ({currentStoreIndex + 1}/{uniqueRoute.length})
            </h4>

            {/* í˜„ì¬ ëª©í‘œ ë§¤ëŒ€ ì •ë³´ */}
            {currentStoreIndex < uniqueRoute.length && (
              <div className="bg-white rounded p-3 mb-3 border">
                <div className="font-medium text-gray-800 mb-1">
                  ğŸ“ í˜„ì¬ ëª©í‘œ: {uniqueRoute[currentStoreIndex].location}
                </div>
                <div className="text-sm text-gray-600">
                  ì¢Œí‘œ: ({uniqueRoute[currentStoreIndex].coordinates.x},{' '}
                  {uniqueRoute[currentStoreIndex].coordinates.y})
                </div>
                <div className="text-sm text-gray-600">
                  ë¬¼í’ˆ: {uniqueRoute[currentStoreIndex].item}
