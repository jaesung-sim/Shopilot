    }

    try {
      // ì¢Œí‘œ ë³€í™˜ ì ìš©
      const transformedCoords = applyTransform(x, y);

      const goalMessage = new ROSLIB.Message({
        x: transformedCoords.x,
        y: transformedCoords.y,
        z: 0.0,
      });

      goalPublisherRef.current.publish(goalMessage);

      addNotification(
        `ğŸ¯ ëª©í‘œ ì „ì†¡: ${
          description || `(${x}, ${y})`
        } â†’ ROS(${transformedCoords.x.toFixed(
          1,
        )}, ${transformedCoords.y.toFixed(1)})`,
      );

      console.log('ğŸ¯ ëª©í‘œ ì¢Œí‘œ ì „ì†¡:', {
        description,
        original: { x, y },
        transformed: transformedCoords,
      });

      return true;
    } catch (error) {
      console.error('ëª©í‘œ ì „ì†¡ ì˜¤ë¥˜:', error);
      const errorMessage =
        error instanceof Error ? error.message : 'Unknown error';
      addNotification(`ëª©í‘œ ì „ì†¡ ì‹¤íŒ¨: ${errorMessage}`);
      return false;
    }
  };

  // ë‹¤ìŒ ë§¤ëŒ€ë¡œ ì´ë™
  const goToNextStore = (): void => {
