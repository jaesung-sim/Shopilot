      addNotification(`í† í”½ ì„¤ì • ì‹¤íŒ¨: ${errorMessage}`);
    }
  };

  // ë‹¨ì¼ ë§¤ëŒ€ ì¢Œí‘œ ì „ì†¡ í•¨ìˆ˜ (í† í”½ ë°©ì‹)
  const sendSingleGoal = (
    x: number,
    y: number,
    description?: string,
  ): boolean => {
    const ROSLIB = getROSLIB();
    if (!rosRef.current || !goalPublisherRef.current || !ROSLIB) {
